<div class="row">
    <div class="col-2"></div>
    <div class="col-5">
      <br/>
	<h2 class="fw-light">Water Meter(유량계 정보)</h2>
    </div>
    <div class="col-2"></div>    
    <div class="col-3">
      <div class="form-check form-switch">
	<input class="form-check-input" type="checkbox" id="switcher">
	<label class="form-check-label" for="switcher"> Auto Refresh </label>
      </div>
      <%= link_to 'refresh', watermeter_path, { :class => 'btn btn-secondary', 'data-toggle' => 'tooltip', 'data-placement' => 'bottom', :title => 'button or auto?'} %>
      <%= link_to 'home', root_path, class: "btn btn-primary" %>
    </div>
</div>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8 card border-primary " >
	<div class="card-header">Water Meters Table</div>
	<div class="card-body text-primary">
	    <p class="card-text">
		<table class="table table-hover w-auto small">
		    <thead>
			<tr>
			    <th scope="col">ID</th>
			    <th scope="col">건물(dong)</th>
			    <th scope="col">room type</th>
			    <th scope="col">시리얼 번호</th>
			    <th scope="col">유량계 번호</th>
			    <th scope="col">순시값</th>
			    <th scope="col">적산값</th>
			    <th scope="col">파이프 규격</th>
			    <th scope="col">연결 위치</th>
			    <th scope="col">데이터 획득시간 </th>
			</tr>
		    </thead>
		    <tbody>
			<% @watermeters.each do |watermeter| %>
			    <tr>
				<th scope="row"><%= watermeter.id %> </th>
				<td><%= watermeter.dong %></td>
				<td><%= watermeter.roomtype %></td>
				<td><%= watermeter.watermeter_sn %></td>
				<td><%= watermeter.watermeter_number %></td>
				<td><%= watermeter.flowrate %></td>
				<td><%= watermeter.totalvolume %></td>
				<td><%= watermeter.pipesize %></td>
				<td><%= watermeter.location %></td>
				<td><%= watermeter.getting_time %></td>
			    </tr>
			<% end %>
		    </tbody>
		</table>
		<%= pagy_bootstrap_nav(@pagy).html_safe %>
	    </p>
	</div>
    </div>
    <div class="col-2"></div>    
</div>

<%= javascript_pack_tag 'water_meters_index' %>
