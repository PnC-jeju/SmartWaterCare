
<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
      <div class="col-1"></div>
    <div class="col">
	<table class="table table-hover">
	    <thead>
		<tr>
		    <th scope="col">유량계 아이디</th>
		    <th scope="col">유량계 위치(ex:210동, 220동)</th>
		    <th scope="col">유량계 설치 room type</th>
		    <th scope="col">유량계 serial number</th>
		    <th scope="col">유량계 number</th>
		    <th scope="col">유량계 유량 순시값</th>
		    <th scope="col">유량계 유량 적산값</th>
		    <th scope="col">유량계 파이프 규격</th>
		    <th scope="col">유량계 연결 위치</th>
		    <th scope="col">유량계 데이터 획득시간[device] </th>
		</tr>
	    </thead>
	    <tbody>
		<% @watermeters.each do |watermeter| %>
		<tr>
		    <th scope="row"><%= watermeter.id %> </th>
		    <td><%= watermeter.dong %></td>
		    <td><%= watermeter.roomtype %></td>
		    <td><%= watermeter.watermeter_sn %></td>
		    <td><%= watermeter.watermeter_number %></td>
		    <td><%= watermeter.flowrate %></td>
		    <td><%= watermeter.totalvolume %></td>
		    <td><%= watermeter.pipesize %></td>
		    <td><%= watermeter.location %></td>
		    <td><%= watermeter.getting_time %></td>
		</tr>
		<% end %>
	    </tbody>
	</table>
    </div>
    <div class="col-1"></div>
  </div>
</div>
<div class="text-center">
 <ul><li><%= pagy_bootstrap_nav(@pagy).html_safe %></li></ul>
</div>
