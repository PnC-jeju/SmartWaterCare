<div class="row">
    <div class="col-2"></div>
    <div class="col-5">
	<h1 class="fw-light">Pressure Sensors (압력계 정보)</h1>
    </div>
    <div class="col-2"></div>    
    <div class="col-3">
	<%= link_to 'home', root_path, class: "btn btn-primary my-2" %>
    </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col">
    </div>
  </div>
  <div class="row">
      <div class="col-1"></div>
      <div class="col">
	  <div class="table-responsive">
	      <table id="example-table-1" class="table table-hover w-auto small">
		  <thead>
		      <tr>
			  <th scope="col">ID</th>
			  <th scope="col">건물(dong)</th>
			  <th scope="col">room type</th>
			  <th scope="col">시리얼 번호</th>
			  <th scope="col">압력계 번호</th>
			  <th scope="col">압력 값</th>
			  <th scope="col">온도 값</th>
			  <th scope="col">연결 위치</th>
			  <th scope="col">데이터 획득시간 </th>
		      </tr>
		  </thead>
		  <tbody>
		      <% @ps.each do |pressuresensor| %>
			  <tr>
			      <th scope="row"><%= pressuresensor.id %> </th>
			      <td><%= pressuresensor.dong %></td>
			      <td><%= pressuresensor.roomtype %></td>
			      <td><%= pressuresensor.pressuresensor_sn %></td>
			      <td><%= pressuresensor.pressuresensor_number %></td>
			      <td><%= pressuresensor.pressure %></td>
			      <td><%= pressuresensor.temperature %></td>
			      <td><%= pressuresensor.location %></td>
			      <td><%= pressuresensor.getting_time %></td>
			  </tr>
		      <% end %>
		  </tbody>
	      </table>
	  </div>
    </div>
    <div id="ex1_Result1" class="col-1"></div>
  </div>
</div>
<div class="row">
    <div class="col-2">

    </div>
    <div class="col">
	<ul><li><%= pagy_bootstrap_nav(@pagy).html_safe %></li></ul>
    </div>
    <div class="col-4"></div>
</div>

<script type="text/javascript">
 // 테이블의 Row 클릭시 값 가져오기
 $("#example-table-1 tr").click(function(){ 	

     var str = ""
     var tdArr = new Array();	// 배열 선언
     
     // 현재 클릭된 Row(<tr>)
     var tr = $(this);
     var td = tr.children();
     
     // tr.text()는 클릭된 Row 즉 tr에 있는 모든 값을 가져온다.
     console.log("클릭한 Row의 모든 데이터 : "+tr.text());
     $("#ex1_Result1").html(" * 클릭한 Row의 모든 데이터 = " + tr.text());		

 });
</script>
